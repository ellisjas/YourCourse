<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Jane Doe' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'jane.doe@rmit.edu.au' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Must be at least 8 characters' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-success" %>
    <% end %>
  </div>
</div>