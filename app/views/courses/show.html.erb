<% provide(:title, @course.name) %>
<h1><%= @course.name%></h1>
<hr />
<div class="row">
  <div class="col-md-8">
    <div class="course">
      <h2>Prequisite: <%= @course.prerequisite %></h2>
      <div class="grey-box">
        <p>
          <strong>Category:</strong>
          <%= @categories.map { |c| link_to(c.name, c) }.join(', ').html_safe %>
        </p>
        <p>
          <strong>Location: </strong>
          <%= @locations.map { |l| link_to(l.location, l) }.join(', ').html_safe %>
        </p>
        <p><strong>Course description:</strong></p>
        <p><%= @course.description %></p>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-md-offset-1 course-user">
    <%= render @user %>
  </div>
</div>
<ul class="course-buttons">
  <li>
    <%= link_to "Return to Course List", courses_path, class: "btn btn-info" %>
  </li>
  <% if @user == current_user %>
    <li><%= link_to "Edit Course", edit_course_path(@course), class: "btn btn-success" %></li>
  <% end %>
</ul>